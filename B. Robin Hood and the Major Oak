#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--) {
        int n,k;
        cin >>n>>k;
        int start= max(1,n-k + 1);
        long long total_leaves =(n*(n+1))/2-((start-1)*start)/2;
        if (total_leaves % 2== 0)
            cout<<"YES\n";
        else
            cout<<"NO\n";
    }
   
}
